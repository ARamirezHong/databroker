from dataportal.replay.search import (GetLastView, WatchForHeadersView,
                                      DisplayHeaderView, DisplayPVView)
from dataportal.replay.muxer import MuxerController
from dataportal.replay.scalar import PlotView, PlotControls

from enaml.widgets.api import (MainWindow, Container, DockArea, DockItem,
                               ScrollArea)
from enaml.layout.api import VSplitLayout, HSplitLayout, TabLayout


def define_layout(init_params, watch_header, header_view, pv_view, muxer,
                  scalar_plot_controls, scalar_plot, search):

    if init_params['screen_size'] == 'small':
        return HSplitLayout(
            HSplitLayout(
                VSplitLayout(
                    TabLayout(search, watch_header,
                              index=init_params['search_tab_index']),
                    TabLayout(header_view, pv_view, muxer)),
                scalar_plot_controls),
            scalar_plot,)
    else:
        return HSplitLayout(
            HSplitLayout(
                VSplitLayout(
                    TabLayout(search, watch_header,
                              index=init_params['search_tab_index']),
                    TabLayout(header_view, pv_view,),
                    muxer),
                scalar_plot_controls),
            scalar_plot,)


enamldef MainView(MainWindow): main_view:
    attr get_last_model
    attr muxer_model
    attr scalar_collection
    attr watch_headers_model
    attr display_header_model
    attr init_params
    Container: container:
        DockArea: area:
            layout = define_layout(
                init_params, watch_header=watch_header.name,
                header_view=header_view.name, pv_view=pv_view.name,
                muxer=muxer.name, search=search.name,
                scalar_plot_controls=scalar_plot_controls.name,
                scalar_plot=scalar_plot.name)

            DockItem: search:
                closable = False
                name = 'search'
                title = "Search"
                Container:
                    ScrollArea:
                        GetLastView:
                            get_last_model = main_view.get_last_model
            DockItem: watch_header:
                closable = False
                name = 'watch_header'
                title = "Most Recent Header"
                Container:
                    ScrollArea:
                        WatchForHeadersView:
                            watch_headers_model = main_view.watch_headers_model
            DockItem: header_view:
                closable = False
                name = 'header_view'
                title = "Run Summary"
                Container:
                    ScrollArea:
                        DisplayHeaderView:
                            display_header_model = main_view.display_header_model
            DockItem: pv_view:
                closable = False
                name = 'pv_view'
                title = "PV info "
                Container:
                    ScrollArea:
                        DisplayPVView:
                            display_header_model = main_view.display_header_model
            DockItem: muxer:
                closable = False
                name = 'muxer'
                title = 'Muxer'
                Container:
                    ScrollArea:
                        MuxerController:
                            muxer_model = main_view.muxer_model
            DockItem:  scalar_plot_controls:
                closable = False
                name = 'scalar_plot_controls'
                title = 'Scalar Plot Controls'
                Container:
                    ScrollArea:
                        PlotControls:
                            scalar_collection = main_view.scalar_collection
            DockItem: scalar_plot:
                closable = False
                name = 'scalar_plot'
                title = "Scalar Plot"
                PlotView:
                    pass
